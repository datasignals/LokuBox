{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "types": ["vite/client", "vite-plugin-svgr/client"],
    "paths": {
      "@repo/common/*": ["../packages/common/src/*"]
    }
  }
}
